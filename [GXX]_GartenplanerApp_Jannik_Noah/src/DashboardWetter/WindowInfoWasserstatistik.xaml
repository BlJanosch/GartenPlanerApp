<Window x:Class="DashboardWetter.WindowInfoWasserstatistik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardWetter"
        mc:Ignorable="d"
        Title="WindowInfoWasserstatistik" Height="280" Width="630" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Background="#262626">
        <Label FontWeight="Bold" FontSize="30" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Top" Margin="20 10">Kleine Info</Label>
        <Label x:Name="LabelInfo" Content="" Foreground="White" Margin="20"></Label>
        <Button x:Name="ButtonOK" Margin="0 10 0 0" IsCancel="True" Background="#265026" Foreground="White" FontSize="20" FontWeight="Bold" Width="100">OK</Button>
    </StackPanel>
</Window>
