<Window x:Class="DashboardWetter.Window_ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardWetter"
        mc:Ignorable="d"
        Title="Passwort verändern" Height="250" Width="350">
    <Canvas>
        <Button Content="Abbrechen" Canvas.Left="135" Canvas.Top="154" HorizontalAlignment="Left" VerticalAlignment="Center" Width="64" IsCancel="True"/>
        <Button x:Name="ButtonConfirm" Content="Bestätigen" Canvas.Left="218" Canvas.Top="154" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="False" Click="ButtonConfirm_Click"/>
        <Label Content="Old Password" Height="28" Canvas.Left="13" Canvas.Top="29" Width="84" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="New Password" Height="28" Canvas.Left="10" Canvas.Top="62" Width="90" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="TBold" Canvas.Left="135" TextWrapping="Wrap" Text="" Canvas.Top="34" Width="141" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="TBnew" Canvas.Left="135" TextWrapping="Wrap" Text="" Canvas.Top="67" Width="141" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Canvas>
</Window>
