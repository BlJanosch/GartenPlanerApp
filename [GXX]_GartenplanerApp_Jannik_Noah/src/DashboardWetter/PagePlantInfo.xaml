<Page x:Class="DashboardWetter.PagePlantInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DashboardWetter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePlantInfo">

    <Border  Background="#262626" Opacity="0.8" CornerRadius="10" Margin="10,15,10,15">
        <DockPanel>
            <Label x:Name="LabelPlantName" DockPanel.Dock="Top" Content="Kohlrabi" FontSize="25" FontFamily="Ahorni" Foreground="White" HorizontalContentAlignment="Center" FontWeight="Bold"></Label>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="TextBlockInfos" TextWrapping="Wrap" FontSize="14" FontWeight="Medium" FontFamily="Franklin Gothic Book"></TextBlock>

                <Image x:Name="Image" Grid.Column="1" />
            </Grid>
        </DockPanel>
                
    </Border>
</Page>
