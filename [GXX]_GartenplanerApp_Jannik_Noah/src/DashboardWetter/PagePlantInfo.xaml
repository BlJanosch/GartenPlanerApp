<Page x:Class="DashboardWetter.PagePlantInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DashboardWetter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePlantInfo">

    <DockPanel Margin="10">
        
        <Label x:Name="LabelPlantName" Background="DarkGray" DockPanel.Dock="Top" Content="Kohlrabi" FontSize="25" HorizontalContentAlignment="Center" FontWeight="Bold"></Label>

        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name="TextBlockInfos" TextWrapping="Wrap" FontSize="14" FontWeight="Medium" FontFamily="Franklin Gothic Book"></TextBlock>

            <Image x:Name="Image" Grid.Column="1" />

        </Grid>
        
    </DockPanel>
</Page>
